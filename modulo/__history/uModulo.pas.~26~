{$R *.dfm}

function Tmodulo.aCero(Numero: Currency): integer;
var
  _frac: real;
  _res: integer;
begin
  _frac := Frac(Numero);

  if _frac >= 0.5 then
    _res := Trunc(Numero) + 1
  else
    _res := Trunc(Numero);

  Result := _res;
end;

end.
